{% extends 'layout.twig' %}

{% block body %}
	<h1>{{title}}</h1>

	<input type="text" placeholder="rechercher..." />

	<table border="1">
		<thead>
			<th>Nom</th>
			<th>Prenom</th>
			<th>Adresse</th>
			<th>Actions</th>
		</thead>
		<tbody>
			{% for students in cont %}
				<tr>
					<td>{{students.nom}}</td>
					<td>{{students.prenom}}</td>
					<td>{{students.adresse}}</td>
					<td>
						<a href="http://localhost:3000/students/edit/{{students._id}}">
							<button>Edit</button>
						</a>
						<a href="http://localhost:3000/students/delete/{{students._id}}">
							<button>Delete</button>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<h1>Add New Student</h1>
	<form method="post" action="http://localhost:3000/students">
		Nom:
		<input type="text" name="nom" placeholder="your firstname"/><br/>
        		Prenom:
		<input type="text" name="prenom" placeholder="your lastname"/><br/>
        		Adresse:
		<input type="text" name="adresse" placeholder=""/><br/>

		<button type="submit">Add New Student</button>
	</form>

{% endblock %}
